{
  "packages": [
    "packages/components/*",
    "packages/components/atoms/*",
    "packages/components/molecules/*",
    "packages/components/organisms/*",
    "packages/services/*",
    "packages/helpers/*",
    "packages/cascade/*"
  ],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}